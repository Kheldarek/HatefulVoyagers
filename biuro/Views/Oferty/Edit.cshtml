@model biuro.Oferta

@{
    ViewBag.Title = "Edycja oferty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edycja oferty</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Oferta</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Cena)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Cena)
            @Html.ValidationMessageFor(model => model.Cena)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DataWyjazdu)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DataWyjazdu)
            @Html.ValidationMessageFor(model => model.DataWyjazdu)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DataPowrotu)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DataPowrotu)
            @Html.ValidationMessageFor(model => model.DataPowrotu)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProgramID, "Program")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ProgramID", String.Empty)
            @Html.ValidationMessageFor(model => model.ProgramID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PunktWyjazduID, "PunktWyjazdu")
        </div>
        <div class="editor-field">
            @Html.DropDownList("PunktWyjazduID", String.Empty)
            @Html.ValidationMessageFor(model => model.PunktWyjazduID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MiejsceID, "Miejsce")
        </div>
        <div class="editor-field">
            @Html.DropDownList("MiejsceID", String.Empty)
            @Html.ValidationMessageFor(model => model.MiejsceID)
        </div>

        <p>
            <input type="submit" value="Zapisz" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powróć do listy", "Index")
</div>
