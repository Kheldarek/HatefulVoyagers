@model IEnumerable<biuro.PunktWyjazdu>

@{
    ViewBag.Title = "Punkty wyjazdu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Punkty wyjazdu</h2>

<p>
    @Html.ActionLink("Stwórz nowy punkt wyjazdu", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Adres)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Adres)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
