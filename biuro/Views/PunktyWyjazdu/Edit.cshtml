@model biuro.PunktWyjazdu

@{
    ViewBag.Title = "Edycja punktu wyjazdu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edytuj punkt wyjazdu</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>PunktWyjazdu</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Adres)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Adres)
            @Html.ValidationMessageFor(model => model.Adres)
        </div>

        <p>
            <input type="submit" value="Zapisz" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powróć do listy", "Index")
</div>
