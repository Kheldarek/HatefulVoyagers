@model biuro.Miejsce

@{
    ViewBag.Title = "Usuwanie miejsca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Usuń miejsce</h2>

<h3>Czy jesteś pewien, że chcesz usunąć to miejsce?</h3>
<fieldset>
    <legend>Miejsce</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Nazwa)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Nazwa)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Opis)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Opis)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Usuń" /> |
        @Html.ActionLink("Powróć do listy", "Index")
    </p>
}
