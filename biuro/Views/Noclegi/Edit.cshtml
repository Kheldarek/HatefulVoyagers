@model biuro.Nocleg

@{
    ViewBag.Title = "Edycja noclegu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edytuj nocleg</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Nocleg</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Adres)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Adres)
            @Html.ValidationMessageFor(model => model.Adres)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Standard)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Standard)
            @Html.ValidationMessageFor(model => model.Standard)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MiejsceID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MiejsceID)
            @Html.ValidationMessageFor(model => model.MiejsceID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MiejsceID, "Miejsce")
        </div>
        <div class="editor-field">
            @Html.DropDownList("MiejsceID1", String.Empty)
            @Html.ValidationMessageFor(model => model.MiejsceID)
        </div>

        <p>
            <input type="submit" value="Zapisz" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powróć do listy", "Index")
</div>